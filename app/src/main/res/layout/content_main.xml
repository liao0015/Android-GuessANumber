<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage"
        android:background="#ffffff"
        android:src="@drawable/icon1"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage2"
        android:background="#ffffff"
        android:src="@drawable/icon2"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage3"
        android:background="#ffffff"
        android:src="@drawable/icon3"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage4"
        android:background="#ffffff"
        android:src="@drawable/icon4"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage5"
        android:background="#ffffff"
        android:src="@drawable/icon5"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/aiImage6"
        android:background="#ffffff"
        android:src="@drawable/icon6"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/guessBtn"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/userInput" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/userInput"
        android:background="#888383"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:id="@+id/guessBtn"
        android:clickable="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/resetBtn"
        android:layout_marginEnd="48dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="#4e89e4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/resetBtn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/userInput"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="#2bd44a" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/output"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/resetBtn"
        android:layout_centerHorizontal="true"
        android:background="#c93636"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A Worthy Opponent"
        android:id="@+id/textView"
        android:layout_below="@+id/winMessage"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/winMessage"
        android:layout_below="@+id/output"
        android:layout_centerHorizontal="true"
        android:textColor="#fe0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:capitalize="characters" />
</RelativeLayout>
